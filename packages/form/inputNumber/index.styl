@import '../../../constants'


.number-input
  position relative
  display flex
  align-items center
  width 40px
  height 22px
  &.disabled
    input
      color $cl-btn-disabled

  &:hover
    input
      border-bottom 1px solid $cl-secondary-text
    .buttons
      visibility visible

  > input
    width 100%
    height 100%
    padding-right 20px
    text-indent 4px
    font-size 12px

    &:focus,
    .buttons
      visibility: visible
  > .input
    border 0
    outline 0
    background transparent
    color $cl-secondary-text
    border-top 1px solid transparent
    border-bottom 1px solid $grey

    &:focus
      border-bottom 1px solid $cl-core


  > .buttons
    visibility hidden
    position absolute
    width 20px
    top 0
    right 0
    bottom 1px
    display: flex
    flex-direction column

    span
      display flex
      flex 1
      justify-content center
      align-items center
      &:active
        color $cl-core
